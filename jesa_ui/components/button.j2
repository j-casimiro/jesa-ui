{% comment %} 
  ShadCN-style Button Component

  Usage:
  {% include "components/button.html" with type="submit" label="Click me" class="w-full" disabled="true" %} 
{% endcomment %}

<button
  type="{{ type|default:'button' }}"
  {% if disabled == 'true' %} disabled {% endif %}
  name="{{ name|default:'' }}"
  value="{{ value|default:'' }}"
  id="{{ id|default:'' }}"
  class="bg-neutral-800 shadow-sm text-white hover:bg-neutral-700 inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none h-10 px-4 py-2 {{ class|default:'' }}"
>
  {{ label|default:'Button' }}
</button>
