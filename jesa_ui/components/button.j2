{% macro Button(type='button', label='Button', class_='', disabled=false, name='', value='', id='') %}
  <button
    type="{{ type }}"
    {% if disabled %} disabled {% endif %}
    name="{{ name }}"
    value="{{ value }}"
    id="{{ id }}"
    class="bg-neutral-800 shadow-sm text-white hover:bg-neutral-700 inline-flex items-center justify-center rounded-md text-sm font-medium transition-colors focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:opacity-50 disabled:pointer-events-none h-10 px-4 py-2 {{ class_ }}"
  >
    {{ label }}
  </button>
{% endmacro %}
